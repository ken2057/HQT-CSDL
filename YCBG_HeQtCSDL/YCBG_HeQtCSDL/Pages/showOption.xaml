<Page x:Class="YCBG_HeQtCSDL.Pages.showOption"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YCBG_HeQtCSDL.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Chức năng"
      WindowTitle="Chức năng">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>

        <Button x:Name="btnOpenYCBaoGia" Click="btnOpenYCBaoGia_Click"
                Grid.Column="1" Grid.Row="1" Margin="15px"
                Content="Yêu cầu báo giá" FontSize="20px"/>
        <Button x:Name="btnOpenDonMuaHang" Click="btnOpenDonMuaHang_Click"
                Grid.Column="2" Grid.Row="1" Margin="15px"
                Content="Đơn mua hàng" FontSize="20px"/>
    </Grid>
</Page>
